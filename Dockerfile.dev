FROM node:18

# Install Python and system packages
RUN apt-get update && \
    apt-get install -y --no-install-recommends python3 python3-pip python3-venv qpdf && \
    python3 -m venv /opt/venv && \
    /opt/venv/bin/pip install --no-cache-dir pdf2docx && \
    rm -rf /var/lib/apt/lists/*

# Add venv bin to PATH
ENV PATH="/opt/venv/bin:$PATH"

# Set working directory
WORKDIR /app

# Install Node dependencies (dev mode)
COPY package*.json ./
RUN npm install

# Copy source (though in dev, volume mount will override it)
COPY . .

# Expose dev port
EXPOSE 4000

# Start Next.js in dev mode
CMD ["npm", "run", "dev"]
